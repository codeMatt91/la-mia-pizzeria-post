@model Pizza

<div class="container">
	<form method="post" action="@Url.Action("ShowPizza", "Pizza")">
		@Html.AntiForgeryToken()
		<div class="mb-3">
			<strong>Id:</strong><br>
			<input asp-for="Id">
		</div>
		<div class="mb-3">
			<strong>Nome:</strong><br>
			<input asp-for="Name" >
		</div>
		<div class="mb-3">
			<strong >Descrizione:</strong><br>
			<input asp-for="Description">
		</div>
		<div class="mb-3">
			<strong >Prezzo:</strong><br>
			<input asp-for="Price">
		</div>
		<div class="mb-3">
			<strong>Foto:</strong><br>
			<input asp-for="Photo">
		</div>
		<button class="btn-primary btn" type="submit">Conferma</button>
	</form>
</div>